<%= render partial: "shared/navbarrenter" %>

<h1>Rating</h1>

<%= form_with url: ratings_path, method: :post do |form| %>

  <div>
    <%= form.hidden_field :product_id, value: @product.id %>
    <div>
    <%= form.label :rating %><br>
<%= form.number_field :rating, in: 1..5, step: 0.5 %>  </div>
    <div>
    <%= form.label :comment %><br>
    <%= form.text_field :comment %>
  </div>

    
  </div>

  <div>
    <%= form.submit "Submit"%>
  </div>
<% end %>