<%= render partial: "shared/navbarrenter" %>
<center>
  <h1>Your Payment History</h1>
  <%
=begin%>
 <ul>
    <% @rentals.each do |rental| %>
    <div class="card">
      <%if rental.payment_history%>
        <%product=Product.find(rental.product_id)%>
        Name:<%=product.name %><br>
        <a href="/paymenthistories/<%= product.id%>">View Product</a> <br>
        Rent:
        <%= product.rent%>
      <%end%>
    </div>
    <br><br>
    <% end %> 

  </ul>
  <%
=end%>
</center>

<div class="container">
  <% @rentals.each do |rental| %>
    <%if rental.payment_history%>
        <%product=Product.find(rental.product_id)%>
      <div class="row">
        <div class="col-md-6" style="top:20%;">
        <br><br><br><br>
          <div id="myCarousel" class="carousel slide" data-ride="carousel"> 
              <center> 
                <div class="item active">
                  <img src="https://i.stack.imgur.com/YbIni.png" alt="Los Angeles" style="width:50%;height:50%;">
                </div>
              </center>
          </div>
        </div>
        <div class="col-md-6">
          <center><h1 style="font-size: 18px;">AMOUNT:RS <%=product.rent%></h1></center>
          <br>
          <h1 style="font-size: 18px;">Details</h1>
          <p><%=product.name%></p>
          <h1 style="font-size: 18px; border-style: solid;padding: .3cm;"><%=product.description%></h1>
          <li style="background-color: #FF5733;display: block;  list-style-type: none; color: white; border-style: none; width: 10cm; height: 1cm;margin-top: 0.7cm;"><center><a href="/paymenthistories/<%= product.id%>">View Product</a></center></li>
          <% n=0%>
          <br>
          <hr style="height:2px;border-width:0;color:gray;background-color:gray">
          <br>
        </div>
      </div>
    <% end %>
  <%end%>
</div>